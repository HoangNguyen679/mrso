<div class="content">
  <div class="movie_top">
    <div class="col-md-10 col-md-offset-1 movie_box">
      <div class="grid images_3_of_2">
        <div class="movie_image">
          <a href="single.html" class="movie-beta__link">
            <%= image_tag @film.picture_url, class: "img-responsive" %>
          </a>
        </div>
      </div>

      <div class="desc1 span_3_of_2">
      	<p class="movie_option"><strong>Category: </strong><%= @film.categories.pluck(:name).to_sentence %></p>
      	<p class="movie_option"><strong>Release date: </strong><%= @film.release_day %></p>
        <p class="movie_option"><strong>Duration: </strong><%= @film.duration %></p>
      	<p class="movie_option"><strong>Director: </strong><%= @film.author %></p>
        <% if user_signed_in? %>
        <div class="down_btn"><a class="btn1" data-toggle="modal" data-target="#myModal"><span></span>Review</a></div>
        <% end %>
      </div>

      <div class="clearfix"></div>
      <p class="m_4"><%= @film.description.html_safe %></p>

      <div class="single">
        <h1>Reviews</h1>
        <!-- <ul class="single_list"> -->
          <% @reviews.each do |review| %>
          <div class="row">
            <div class="col-sm-1">
            <div class="thumbnail">
            <!-- <img class="img-responsive user-photo" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png"> -->
            <%= image_tag review.avatar_url, class: "img-responsive user-photo" %>
            </div><!-- /thumbnail -->
            </div><!-- /col-sm-1 -->

            <div class="col-sm-10">
            <div class="panel panel-default">
            <div class="panel-heading">
            <strong><%= review.email %></strong> <span class="text-muted">reviewed</span>
            <% if user_signed_in? %>
            <% if current_user.id == review.user_id %>
            <%= link_to "edit", edit_review_path(review), class: "pull-right" %>
            <% end %>
            <% end %>
            </div>
            <div class="panel-body">
            <%= review.content.html_safe %>
            <%= link_to "Read more", review, class: "text-muted" %>
            </div><!-- /panel-body -->
            </div><!-- /panel panel-default -->
            </div><!-- /col-sm-5 -->
          </div>
          <!-- <div class="container-fluid">
            <div>
              <div class="card text-center">
                <div class="card-body" id="card">
                  <br>
                  <div class="register">
                    <div class="text">
                      <%= review.content.html_safe %>
                    </div></p>
                    <%= link_to "Read_more", review %>
                  </div>
                  <br><br>
                  <div class="clearfix"> </div>
                </div>
              </div>
            </div>
          </div>
          <br> -->
          <% end %>
        </div>
			    <!-- <li>
			      <div class="clearfix"></div>
			    </li> -->
			  <!-- </ul> -->
      </div>
    </div>


    
    <div class="clearfix"></div>
  </div>
</div>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                    <h4 class="modal-title" id="myModalLabel">New review for film: <%= @film.name %></h4>
                  </div>
                        <div class="">
                          <div class="content">
                            <% if user_signed_in? %>
                            <div class="register-but">
                              <%= form_for @review do |f| %>
                              <%= field_set_tag nil, class: "form-group" do %>

                              <%= f.text_area :content, rows: 10, cols: 25, :class => "tinymce" %>
                              <%= f.hidden_field :film_id, value: @film.id %>
                              <% end %>
                              <div class="actions">
                                <%= f.submit "Done" %>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                              </div>
                            <% end %>
                          </div>
                          <% end %>
                        </div>
                        </div>
                        <div class="clearfix"> </div>
<%= tinymce %>

                </div>
              </div>
            </div>
<%= javascript_include_tag "modal_js" %>
